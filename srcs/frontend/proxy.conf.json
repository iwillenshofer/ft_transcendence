{
  "/auth/*": {
    "target": "http://backend:3000/",
    "secure": false
  },
  "/backend": {
    "target": "http://backend:3000",
    "secure": false,
    "changeOrigin": true,
    "pathRewrite": {
      "^/backend": ""
    }
  },
  "/socket/game": {
    "target": "http://backend:3000",
    "secure": false,
    "changeOrigin": true,
    "pathRewrite": {
      "^/socket/game": "/game"
    }
  },
  "/socket/chat": {
    "target": "http://backend:3000",
    "secure": false,
    "changeOrigin": true,
    "pathRewrite": {
      "^/socket/chat": "/chat"
    }
  },
  "/socket.io": {
	"target": "http://backend:3000",
	"secure": false,
	"changeOrigin": true,
	"ws": true
  }
}
